library(tidyverse)

input <- "C:/Users/aleksandar.dimitrov/Desktop/INFOLITICA/IFRS 9 ПОДГОТОВКА/titanic.csv"


data <- read.csv(input) %>%
  as.tibble() %>%
  mutate(
    Survived = as.factor(Survived),
    Pclass = as.factor(Pclass),
    Sex = as.factor(Sex),
    Embarked = as.factor(Embarked)
    
)

str(data)

  
hist <- ggplot(data = data, aes(x = Age))
hist + geom_histogram(bins = 15, color = "darkslategray",
                      fill = "darkslategray4", alpha = 0.5) + # Добри практики за цветове
  ggtitle("Age Distribution on the Titanic") + # Заглавие
  labs(y = "Number of Passangers") + # Ордината 
  theme_minimal() # Добри практик за дизайн

